# Application
APP_NAME=kirana
APP_ENV=development
DEBUG=false
SECRET_KEY=your-secret-key-here
APP_PORT=8000

# API Authentication
KIRANA_API_KEY=kirana-default-api-key-change-me

# Admin Panel
ADMIN_PASSWORD=your-admin-password

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Database Config
DB_HOST=localhost
DB_PORT=5432
DB_USER=kirana
DB_PASS=kirana
DB_NAME=kirana
# DATABASE_URL=postgresql+asyncpg://kirana:kirana@localhost:5432/kirana

# Database Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# Redis Config
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_URL=redis://localhost:6379/0

# LLM Providers (OpenAI Compatible)
OPENAI_API_KEY=sk-xxx
OPENAI_BASE_URL=

# LLM Settings
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3

# MCP - Z.AI
ZAI_API_KEY=your-zai-api-key
ZAI_MCP_URL=https://api.z.ai/api/mcp/web_search_prime/mcp

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Session Management
SESSION_EXPIRY_DAYS=3
SESSION_DELETION_DAYS=7
SESSION_CLEANUP_INTERVAL_HOURS=1

# Logging
LOG_LEVEL=INFO
